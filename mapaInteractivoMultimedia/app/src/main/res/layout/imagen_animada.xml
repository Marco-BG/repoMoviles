<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imagenCargada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="200dp"
            tools:srcCompat="@tools:sample/avatars" />

        <Button
            android:id="@+id/btnAnimarImagen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/botonAnimarImagen" />

        <Button
            android:id="@+id/btnFondoPantalla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/botonFondoPantalla" />

        <Button
            android:id="@+id/btnGrabarAudio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/botonGrabarAudio" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>